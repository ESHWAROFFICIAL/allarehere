function copy(){
  alert("LOL ! You can't Copy");
  }

function summer()
{  
 
document.body.style.backgroundImage = "url('https://res.cloudinary.com/pavie/image/upload/v1595005653/summer_jt8yiy.png')";
 document.body.style.backgroundRepeat = "no-repeat";
 document.body.style.backgroundSize = "100%"; 
  alert("Hey ! It's Summer");
}

function winter()
{
 document.body.style.backgroundImage ="url('https://res.cloudinary.com/pavie/image/upload/v1595005659/winter_kxcbyk.png')";
document.body.style.backgroundRepeat = "no-repeat";
document.body.style.backgroundSize = "100%"; 
  alert("Hey ! It's Winter");
}
function autumn()
{
 document.body.style.backgroundImage ="url('https://res.cloudinary.com/pavie/image/upload/v1595005628/autumn_ywwom5.png')";
document.body.style.backgroundRepeat = "no-repeat";
document.body.style.backgroundSize = "100%";
  alert("Hey ! It's Autumn");
 
}
function spring()
{
 document.body.style.backgroundImage ="url('https://res.cloudinary.com/pavie/image/upload/v1595005642/spring_qejh9v.png')";
 document.body.style.backgroundRepeat = "no-repeat";
 document.body.style.backgroundSize = "100%"; 
